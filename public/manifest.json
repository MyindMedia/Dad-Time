{
  "name": "DadTime - Co-Parenting Tracker",
  "short_name": "DadTime",
  "description": "Track time, trips, and expenses for co-parenting with privacy-focused features. Background GPS and timer tracking with wake lock support.",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#00082D",
  "theme_color": "#1A66FF",
  "orientation": "portrait",
  "scope": "/",
  "categories": ["lifestyle", "productivity", "utilities"],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "audio/*", "application/pdf"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Start Visit Timer",
      "short_name": "Start Visit",
      "description": "Start tracking time with your child",
      "url": "/visit",
      "icons": [{ "src": "/icon-visit.png", "sizes": "192x192" }]
    },
    {
      "name": "Start Trip",
      "short_name": "Start Trip",
      "description": "Begin GPS mileage tracking",
      "url": "/trips",
      "icons": [{ "src": "/icon-trip.png", "sizes": "192x192" }]
    },
    {
      "name": "Add Expense",
      "short_name": "Expense",
      "description": "Log a new expense",
      "url": "/expenses",
      "icons": [{ "src": "/icon-expense.png", "sizes": "192x192" }]
    }
  ]
}
